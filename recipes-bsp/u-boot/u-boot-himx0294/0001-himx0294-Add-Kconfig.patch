From: Steffen Sledz <sledz@dresearch-fe.de>
Date: Wed, 13 Dec 2017 10:59:38 +0100
Subject: [PATCH] himx0294: Add Kconfig

Add Kconfig support for himx0294 board.

Signed-off-by: Mario Schuknecht <mario.schuknecht@dresearch-fe.de>
Signed-off-by: Steffen Sledz <sledz@dresearch-fe.de>
---
 arch/arm/mach-imx/mx6/Kconfig | 5 +++++
 1 file changed, 5 insertions(+)

diff --git a/arch/arm/mach-imx/mx6/Kconfig b/arch/arm/mach-imx/mx6/Kconfig
index 540f2b29b1..44d8e590ae 100644
--- a/arch/arm/mach-imx/mx6/Kconfig
+++ b/arch/arm/mach-imx/mx6/Kconfig
@@ -312,6 +312,20 @@ config TARGET_NITROGEN6X
 	imply USB_ETHER_SMSC95XX
 	imply USB_ETHER_MCS7830
 
+config TARGET_HIMX0294
+	bool "Support himx0294"
+	select SUPPORT_SPL
+	imply CMD_SATA
+	imply CMD_FAT
+	imply CMD_USB
+	imply USB
+	imply USB_EHCI
+	imply USB_STORAGE
+	imply USB_HOST_ETHER
+	imply USB_ETHER_ASIX
+	imply USB_ETHER_SMSC95XX
+	imply USB_ETHER_MCS7830
+
 config TARGET_OPOS6ULDEV
 	bool "Armadeus OPOS6ULDev board"
 	select MX6UL_OPOS6UL
@@ -425,6 +429,7 @@ source "board/bachmann/ot1200/Kconfig"
 source "board/barco/platinum/Kconfig"
 source "board/barco/titanium/Kconfig"
 source "board/boundary/nitrogen6x/Kconfig"
+source "board/freescale/himx0294/Kconfig"
 source "board/ccv/xpress/Kconfig"
 source "board/compulab/cm_fx6/Kconfig"
 source "board/congatec/cgtqmx6eval/Kconfig"
